# ============================================
# Clod Sarnet - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Connection URL
# For local development: mongodb://admin:password123@localhost:27017/
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/
# For AWS DocumentDB: mongodb://<username>:<password>@docdb-cluster:27017/?tls=true&tlsCAFile=rds-combined-ca-bundle.pem
MONGO_URL=mongodb://admin:password123@localhost:27017/

# Database name
DB_NAME=clod_sarnet

# ============================================
# AWS CREDENTIALS (Required for Bedrock)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ============================================
# AWS BEDROCK MODELS
# ============================================
# Claude Sonnet 4 on Bedrock (recommended)
BEDROCK_CLAUDE_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0

# Alternative: Claude 3.5 Sonnet (if you don't have access to Claude 4)
# BEDROCK_CLAUDE_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Mistral Large on Bedrock (optional alternative)
BEDROCK_MISTRAL_MODEL_ID=mistral.mistral-large-2407-v1:0

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Storage provider: "local" or "s3"
STORAGE_PROVIDER=s3

# Local storage path (only if STORAGE_PROVIDER=local)
LOCAL_STORAGE_PATH=/app/uploads

# S3 Configuration (required if STORAGE_PROVIDER=s3)
S3_BUCKET_NAME=clod-sarnet-files
S3_REGION=us-east-1
# Note: S3 will use the AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY from above

# ============================================
# OPTIONAL: ANTHROPIC DIRECT API
# ============================================
# If you want to use Anthropic's API directly instead of Bedrock
# This enables extended thinking and web search features
# Leave blank to use Bedrock only
ANTHROPIC_API_KEY=

# ============================================
# OPTIONAL: WEB SEARCH (Tavily)
# ============================================
# For web search functionality with Bedrock
# Get API key from: https://tavily.com/
TAVILY_API_KEY=

# ============================================
# EMBEDDINGS (for RAG/Knowledge Base)
# ============================================
# For document embeddings - can use Anthropic or Emergent
# If using Anthropic Direct API, this can be the same as ANTHROPIC_API_KEY
EMERGENT_LLM_KEY=

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# For production, set this to your frontend URL
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ============================================
# FRONTEND CONFIGURATION (for build)
# ============================================
# Backend API URL (for React build)
REACT_APP_BACKEND_URL=http://localhost:8000
